{
  "compilerOptions": {
    "outDir": "./dist/",
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "allowJs": true,
    "importHelpers": true,
    "lib": ["dom", "es2015"]
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
